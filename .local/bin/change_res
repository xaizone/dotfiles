#!/bin/bash

activemonitors="$(xrandr | awk '/ connected/ && /[[:digit:]]x[[:digit:]].*+/{print $1}')"
monitor="$(echo "$activemonitors" | dmenu -p "display:" -i)"
resolution="$(xrandr -q | awk -v disp="$monitor" '$1 == disp {getline; while ($0 ~ /^[[:blank:]]/) {gsub(/^[[:blank:]]+/, ""); print $1; getline}}' | dmenu -p "resolution:" -i)"
xrandr --output $monitor --mode $resolution
